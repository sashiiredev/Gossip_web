<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Welcome</title>
  </head>
  <body>
    <section class="container">
      <div class="row mt-5 mb-3">
        <div class="col">
          <h1 class="text-center">Bienvenue sur ce super site jeune ragoteur/se</h1>
          <br><br>
          <h2 class="text-center">Merci de remplir ce formulaire pour valider ton inscription</h2>
          <br>
        </div>
      </div>

      <div class="container">
        <%= form_tag url_for(action: 'create'), method: "post" do %>
          <div class="form-group">
            <%= label_tag 'Prenom' %>
            <%= text_field_tag 'user_first_name', nil, placeholder: 'First name', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Nom' %>
          <%= text_field_tag 'user_last_name', nil, placeholder: 'Last name', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Age' %>
          <%= text_field_tag 'user_age', nil, placeholder: 'Age', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Ville' %>
          <%= text_field_tag 'user_city', nil, placeholder: 'City', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Code postale' %>
          <%= text_field_tag 'user_zip_code', nil, placeholder: 'Zip code', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Email' %>
          <%= text_field_tag 'user_email', nil, placeholder: 'Email', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Mot de passe' %>
          <%= text_field_tag 'user_password', nil, placeholder: 'password', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Confirmation mot de passe' %>
          <%= text_field_tag 'user_password_confirmation', nil, placeholder: 'Password confirm', class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= label_tag 'Description (optionnel)' %>
          <%= text_field_tag 'user_description', nil, placeholder: 'description', class: 'form-control' %>
          </div>
          <br>
          <%= submit_tag "validate", class: "btn btn-primary" %>
        <% end %>
      </div>

    </section>
  </body>
</html>
