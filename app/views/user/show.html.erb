<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <section class="jumbotron text-center mb-0">
      <div class="container mt-5 mt-md-4 mt-lg-1 pt-5 pt-md-4 pt-lg-3" id="jumjum">
        <div class="row justify-content-md-center">
          <div class="col-sm-6 col-sm-offset-3 mb-3">
            <h1 class="text-center">Voici les infos de <%= @user.first_name %></h1>
            <br><br>
            <div class="card">
              <div class="card-body">
                <p class="card-text mt-3 mb-3">
                  <B>Name :</B> <%= @user.first_name %> <%= @user.last_name %><br><br>
                  <B>Email :</B> <%= @user.email %><br><br>
                  <B>Age :</B> <%= @user.age %><br><br>
                  <B>City :</B> <%= @user.city.name %><br><br>
                  <B>description :</B> <%= @user.description %>
                  <p><a class="btn btn-dark" <%= link_to "City", city_path(@user.city.id)%></a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
  </body>
</html>
